# Copy this file to .env and edit the values below

# Neo4j Connection Settings
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# HTTP Server Settings
HTTP_HOST=0.0.0.0
HTTP_PORT=8000
HTTP_PATH=/mcp

# SSL/HTTPS Settings (for production)
SSL_ENABLED=false
SSL_CERTFILE=/path/to/domain.cert.pem
SSL_KEYFILE=/path/to/private.key.pem

# For production HTTPS on memory.aynshteyn.dev:
# SSL_ENABLED=true
# SSL_CERTFILE=/path/to/domain.cert.pem
# SSL_KEYFILE=/path/to/private.key.pem
# HTTP_PORT=443

# Optional: Logging
LOG_LEVEL=INFO

